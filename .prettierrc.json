{
    "plugins": ["prettier-plugin-apex"],
    "trailingComma": "none",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "printWidth": 130,
    "overrides": [
        {
            "files": "**/lwc/**/*.html",
            "options": {"parser": "lwc"}
        },
        {
            "files": "*.{cmp,page,component,app,xml,labels,evt,design}",
            "options": { "parser": "html" }
        }
    ]
}
