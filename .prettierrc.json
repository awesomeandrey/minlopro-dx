{
    "plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"],
    "trailingComma": "none",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "printWidth": 130,
    "overrides": [
        {
            "files": "**/lwc/**/*.html",
            "options": { "parser": "lwc" }
        },
        {
            "files": "*.{cmp,page,component,app,xml,labels,evt,design,email}",
            "options": { "parser": "html" }
        },
        {
            "files": "*.{cls,trigger}",
            "options": { "parser": "apex" }
        }
    ]
}
