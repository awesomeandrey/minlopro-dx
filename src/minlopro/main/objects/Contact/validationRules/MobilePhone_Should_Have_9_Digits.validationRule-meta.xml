<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>MobilePhone_Should_Have_9_Digits</fullName>
    <active>true</active>
    <description>Mobile Phone should have 9 digits at least!</description>
    <errorConditionFormula>AND( NOT(ISBLANK(MobilePhone)), LEN(MobilePhone) &lt; 9 )</errorConditionFormula>
    <errorDisplayField>MobilePhone</errorDisplayField>
    <errorMessage>Mobile Phone should have 9 digits at least!</errorMessage>
</ValidationRule>
