<?xml version="1.0" encoding="UTF-8"?>
<FlowTest xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Verify that &apos;CloseDate&apos; field value remains unchnaged if does not exceed predefined date range.</description>
    <flowApiName>Minlopro_Opportunity_BeforeSave</flowApiName>
    <label>Opportunity Is Created</label>
    <testPoints>
        <elementApiName>Start</elementApiName>
        <parameters>
            <leftValueReference>$Record</leftValueReference>
            <type>InputTriggeringRecordInitial</type>
            <value>
                <sobjectValue>{&quot;Amount&quot;:&quot;100&quot;,&quot;CloseDate&quot;:&quot;2025-08-01&quot;,&quot;CurrencyIsoCode&quot;:&quot;USD&quot;,&quot;IsPrivate&quot;:false,&quot;Name&quot;:&quot;Sample Opportunity&quot;,&quot;OwnerId&quot;:&quot;005KI000001f36dYAA&quot;,&quot;StageName&quot;:&quot;New&quot;}</sobjectValue>
            </value>
        </parameters>
    </testPoints>
    <testPoints>
        <assertions>
            <conditions>
                <leftValueReference>$Record.CloseDate</leftValueReference>
                <operator>IsChanged</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
        </assertions>
        <elementApiName>Finish</elementApiName>
    </testPoints>
</FlowTest>
