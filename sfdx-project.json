{
    "packageDirectories": [
        {
            "path": "src/minlopro-core"
        },
        {
            "path": "src/minlopro"
        },
        {
            "path": "src/minlopro-digex"
        },
        {
            "path": "src/minlopro-default",
            "default": true
        }
    ],
    "pushPackageDirectoriesSequentially": true,
    "name": "minlopro-dx",
    "namespace": "",
    "sfdcLoginUrl": "https://test.salesforce.com",
    "sourceApiVersion": "59.0",
    "replacements": [
        {
            "glob": "src/**",
            "stringToReplace": "@SF_USERNAME",
            "replaceWithEnv": "SF_USERNAME"
        },
        {
            "glob": "src/**",
            "stringToReplace": "@SF_INSTANCE_URL",
            "replaceWithEnv": "SF_INSTANCE_URL"
        },
        {
            "glob": "src/**",
            "stringToReplace": "@SF_CCF_APP_CLIENT_ID",
            "replaceWithEnv": "SF_CCF_APP_CLIENT_ID"
        },
        {
            "glob": "src/**",
            "stringToReplace": "@SF_CCF_APP_CLIENT_SECRET",
            "replaceWithEnv": "SF_CCF_APP_CLIENT_SECRET"
        },
        {
            "glob": "src/**",
            "stringToReplace": "@SF_GITHUB_WEBHOOK_SECRET",
            "replaceWithEnv": "SF_GITHUB_WEBHOOK_SECRET"
        },
        {
            "glob": "src/**",
            "stringToReplace": "@SF_SAMPLE_ACCOUNT_ID",
            "replaceWithEnv": "SF_SAMPLE_ACCOUNT_ID",
            "allowUnsetEnvVariable": true
        },
        {
            "glob": "src/**",
            "stringToReplace": "@SF_SAMPLE_CONTACT_ID",
            "replaceWithEnv": "SF_SAMPLE_CONTACT_ID",
            "allowUnsetEnvVariable": true
        }
    ]
}
